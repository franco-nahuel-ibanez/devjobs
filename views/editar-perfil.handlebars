<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label>Nombre</label>
            <input value={{nombre}} type="text" name="nombre" placeholder="Nombre">
        </div>

        <div class="campo">
            <label>E-mail</label>
            <input value={{email}} type="email" name="email" placeholder="E-mail">
        </div>

        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Password">
        </div>

        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen" placeholder="Imagen de perfil">
            <img src="uploads/perfiles/{{imagen}}" class="admin-perfil">
        </div>

        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar Cambios">
        </div>
    </form>
</main>