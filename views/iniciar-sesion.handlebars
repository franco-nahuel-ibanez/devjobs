<main class="contenedor">
    <form action="/iniciar-sesion" method="POST" class="default-form">
        <div class="campo">
            <label>E-mail</label>
            <input type="email" name="email" placeholder="Email" required>
        </div>

        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Password" required>
        </div>

        <div class="campo acciones">
            <a href="/crear-cuenta">Crear una Cuenta</a>
            <a href="/reestablecer-password">¿Olvidaste tu password?</a>
        </div>

        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Iniciar Sesión">
        </div>

    </form>
</main>