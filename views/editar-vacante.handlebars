<main class="contenedor">
    <form action="/vacantes/editar/{{url}}" method="POST" class="default-form">
        <h3>Informacion General</h3>
        <div class="campo">
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" placeholder="Ej: React Developer" required value="{{titulo}}"">
        </div>

        <div class="campo">
            <label for="empresa">Empresa</label>
            <input type="text" name="empresa" placeholder="Empresa" required value="{{empresa}}">
        </div>

        <div class="campo">
            <label for="ubicacion">Ubicacion</label>
            <input type="text" name="ubicacion" placeholder="Ej: Remoto" required value="{{ubicacion}}">
        </div>

        <div class="campo">
            <label for="salario">Salario</label>
            <input type="text" name="salario" placeholder="Salario" required value="{{salario}}">
        </div>

        <div class="campo">
            <label for="contrato">Contrato</label>
            <select name="contrato">
                {{#tipoContrato contrato}}
                    <option value="" disabled selected>-- Selecciona --</option>
                    <option value="Freelance">Freelance</option>
                    <option value="Tiempo Completo">Tiempo Completo</option>
                    <option value="Medio Tiempo">Medio Tiempo</option>
                    <option value="Por Proyecto">Por Proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>
        <h3>Descripcion del Puesto</h3>
        
        <div class="campo descripcion">
            <label>Descripcion</label>
            <input type="hidden" id="x" name="descripcion" value="{{{descripcion}}}">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>

        <ul class="lista-conocimientos">
            {{#seleccionarSkills skills}}
            {{/seleccionarSkills}}
        </ul>
        
        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
        

    </form>

</main>